<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8B2F2F"
    tools:context=".dms">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/headerBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="#8B2F2F"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back" />

            <ImageView
                android:id="@+id/pf"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/usernameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="29dp"
                android:text="Welcome to the chat!!"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/callIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_android_black_24dp"
                android:layout_marginEnd="12dp"/>

            <ImageView
                android:id="@+id/videoCallIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_vid"/>
        </LinearLayout>


        <ScrollView
            android:id="@+id/chatScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerBar"
            android:layout_above="@id/bottomBar"
            android:padding="12dp"
            android:background="@drawable/chat_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_bubble_recieved"
                    android:padding="10dp"
                    android:text="Yo"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_bubble_sent"
                    android:padding="10dp"
                    android:text="Salam"
                    android:textColor="@color/black"
                    android:layout_gravity="end"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_bubble_recieved"
                    android:padding="10dp"
                    android:text="Wasalam, how are you bro."
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_bubble_sent"
                    android:padding="10dp"
                    android:text="Iâ€™m good, thanks! What about you?"
                    android:textColor="@color/black"
                    android:layout_gravity="end"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_bubble_recieved"
                    android:padding="10dp"
                    android:text="Doing great! Let's catch up later."
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@drawable/bottombar_bg"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:layout_margin="12dp">

            <ImageView
                android:id="@+id/cameraIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/message_camera_icon"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_mask"
                android:clipToOutline="true"/>

            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Message..."
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:padding="8dp"/>

            <ImageView
                android:id="@+id/messageRightIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/message_icons"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
